<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.api2semestre.view_controllers.ApprovalsController">
   <children>
      <HBox spacing="8.0">
         <children>
            <Button onAction="#showPopUp" fx:id="btn_approve" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #6ED678; -fx-background-radius: 8;" text="Aprovar Selecionadas" />
            <Button onAction="#showPopUp" fx:id="btn_reject" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #DD6E6E; -fx-background-radius: 8;" text="Rejeitar Selecionadas" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <TableView fx:id="tabela" editable="true" prefHeight="302.0" prefWidth="561.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="col_selecionar" editable="true" prefWidth="24.0" text="☐" />
          <TableColumn fx:id="col_requester" editable="false" minWidth="24.0" prefWidth="96.0" sortable="false" text="Solicitante" />
          <TableColumn fx:id="col_squad" editable="false" prefWidth="128" sortable="false" text="Squad" />
          <TableColumn fx:id="col_tipo" editable="false" prefWidth="128" sortable="false" text="Tipo" />
          <TableColumn fx:id="col_inicio" editable="false" prefWidth="128.0" sortable="false" text="Inicio" />
          <TableColumn fx:id="col_fim" editable="false" prefWidth="128.0" sortable="false" text="Fim" />
          <TableColumn fx:id="col_cliente" editable="false" prefWidth="128.0" sortable="false" text="Cliente" />
          <TableColumn fx:id="col_projeto" editable="false" prefWidth="128.0" sortable="false" text="Projeto" />
          <TableColumn fx:id="col_total" editable="false" prefWidth="64.0" sortable="false" text="total" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
